.login.center-block
    form(role='form', (submit)='login($event, username.value, password.value)')
        .form-group
            label(for='username') Username
            input#username(type='text', #username='', placeholder='Username')
        .form-group
            label(for='password') Password
            input#password(type='password', #password='', placeholder='Password')
        button(type='submit') Login
    error-list
